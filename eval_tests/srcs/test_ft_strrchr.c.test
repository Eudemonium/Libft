#include "libft.h"
#include "libft_test.h"

#define assert(eval, c, src) \
	if (eval) ++success; else {++failure; printf("fail: \"%c in %s\"\n", c, src); }

int	test_ft_strrchr(void)
{
	unsigned	success = 0;
	unsigned	failure = 0;
	char		*func = "ft_strrchr";
	printf("===== %s =====\n", func);
	{
		char	src[] = "0000001";
		char	c = '1';
		char	*expect = strrchr(src, c);
		char	*actual = ft_strrchr(src, c);
		assert(expect == actual, c, src);
	}
	{
		char	src[] = "10000001";
		char	c = '1';
		char	*expect = strrchr(src, c);
		char	*actual = ft_strrchr(src, c);
		assert(expect == actual, c, src);
	}
	{
		char	src[] = "10000001";
		char	c = 'a';
		char	*expect = strrchr(src, c);
		char	*actual = ft_strrchr(src, c);
		assert(expect == actual, c, src);
	}
	{
		char	src[] = "1000\0  ";
		char	c = '\0';
		char	*expect = strrchr(src, c);
		char	*actual = ft_strrchr(src, c);
		assert(expect == actual, c, src);
	}
	printf("%i of %i tests passed.\n", success, (success + failure));
	return (failure == 0);
}
