#include "libft.h"
#include "libft_test.h"

#ifdef assert
#undef assert
#endif

#define assert(eval, src, len) \
	if (eval) ++success; else {++failure; printf("fail: \"(%d) %s\"\n", len, src); }

int	test_ft_memcpy(void)
{
	unsigned	success = 0;
	unsigned	failure = 0;
	char		*func = "ft_memcpy";
	printf("===== %s =====\n", func);
	{
		char	src[] = "basic memcpy ";
		char	*dst_1 = (char *)malloc(23);
		char	*dst_2 = (char *)malloc(23);
		dst_1 = memset(dst_1, '0', 23);
		dst_2 = memset(dst_2, '0', 23);
		char	*expect = (char *)memcpy(dst_1, src, 14);
		char	*actual = (char *)ft_memcpy(dst_2, src, 14);
		assert(strcmp(expect, actual) == 0, src, 23);
	}
	{
		char	src[] = "test basic du memcpy !";
		char	*dst_1 = (char *)malloc(21);
		char	*dst_2 = (char *)malloc(21);
		char	*expect = (char *)memcpy(dst_1, src, 0);
		char	*actual = (char *)ft_memcpy(dst_2, src, 0);
		assert(expect == actual, src, 21);
	}
	printf("%i of %i tests passed.\n", success, (success + failure));
	return (failure == 0);
}
